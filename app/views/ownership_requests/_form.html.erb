<div class="t-body">
  <%= form_tag rubygem_ownership_requests_path(@rubygem), method: :post, class: "ownership_request_form", id: "new_ownership_request" do %>
    <div class="text_field push--top-s">
      <%= label_tag :note, "Ownership Request:", class: "form__label" %>
      <span class="gem__users__mfa-text"><%= t("ownership_calls.markdown_supported") %></span>
      <%= text_area_tag :note, nil, class: "form__input form__textarea", required: true %>
    </div>
    <div class="submit_field">
      <%= submit_tag t("ownership_calls.create_btn"), data: {disable_with: t("form_disable_with")}, class: "form__submit" %>
    </div>
  <% end %>
</div>
